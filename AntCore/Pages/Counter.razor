@page "/counter"
@namespace AntCore.Pages

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>

<MudText Typo="Typo.body1" Class="mb-4">Current count: @currentCount</MudText>

<AuthorizeView>
    <Authorized>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Click me</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton Disabled Variant="Variant.Filled" @onclick="IncrementCount">Click me</MudButton>
        <MudText Typo="Typo.body1" Class="mt-2">Login to count...</MudText>
    </NotAuthorized>
</AuthorizeView>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
